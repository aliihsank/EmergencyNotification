<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmergencyNotification.Login"
             NavigationPage.HasNavigationBar="False" 
             BackgroundColor="#FFC857">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Padding="20,0,20,0" VerticalOptions="Center">
            <Image Source="https://www.realnets.com/wp-content/uploads/2016/12/icon-emergency-services-2-300x300.png" WidthRequest="200" HeightRequest="200"/>
            <Entry x:Name="uname" Placeholder="Kullanıcı Adım" TextColor="#255F85" PlaceholderColor="#255F85"/>
            <Entry x:Name="password" IsPassword="True" Placeholder="Şifrem" TextColor="#255F85" PlaceholderColor="#255F85"/>
            <Button Clicked="Button_ClickedAsync" Text="Login" BackgroundColor="#255F85" TextColor="#FFC857"/>
            <Label Text="Register" TextColor="#255F85">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Register_Clicked"/>
                </Label.GestureRecognizers>
            </Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>